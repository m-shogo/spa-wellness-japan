{
  "config": {
    "theme_name": "arcs3"
  },
  "scripts": {
    "css:sass": "sass --style=compressed wp/wp-content/themes/arcs3/css/:wp/wp-content/themes/arcs3/css/",
    "css:autoprefix": "postcss wp/wp-content/themes/arcs3/css/style.css -u autoprefixer -o wp/wp-content/themes/arcs3/css/style.css",
    "css:min": "cleancss -o wp/wp-content/themes/*/css/style.css wp/wp-content/themes/*/css/style.css",
    "css": "run-s css:sass",
    "watch:css": "chokidar \"wp/wp-content/themes/arcs3/css/**/*.scss\" -c \"npm run css\" --initial",
    "watch:img": "chokidar \"wp/wp-content/themes/arcs3/images_orignal\" -c \"node imagemin.mjs\" --initial",
    "watch:webp": "chokidar \"wp/wp-content/themes/arcs3/images_orignal\" -c \"node webp.mjs\" --initial",
    "watch:server": "browser-sync start --config bs-config.js",
    "watch": "run-p watch:css watch:img watch:webp watch:server",
    "lint:scss": "stylelint \"wp/wp-content/themes/arcs3/css/*.scss\"",
    "format:scss": "stylelint --fix \"wp/wp-content/themes/arcs3/css/*.scss\"",
    "format": "run-p format:scss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.1",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.8.0",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "watch": "^1.0.2"
  },
  "volta": {
    "node": "18.12.1"
  }
}
